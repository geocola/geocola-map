<div class="ol-popup">
    <a href="#" class="ol-popup-closer" ($click)="hidePopup"><i class="fa fa-times-circle"></i></a>
    <div class="ol-popup-content">
      {{#unless modal}}
        <content></content>
      {{/unless}}
    </div>
  </div>

{{#if modal}}
  <modal-dialog active="{{active}}">
    <content></content>
  </modal-dialog>
{{/if}}
