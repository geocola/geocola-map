<div class="ol-popup">
    <button type="button" class="float-right btn btn-clear" ($click)="hidePopup"></button>
    <div class="ol-popup-content">
      {{#unless modal}}
        <content></content>
      {{/unless}}
    </div>
  </div>

{{#if modal}}
  <modal-dialog active="{{active}}">
    <content></content>
  </modal-dialog>
{{/if}}
